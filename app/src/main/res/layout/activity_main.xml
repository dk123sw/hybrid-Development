<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.jingbin.webviewstudy.MainActivity">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内核选择：" />

            <RadioButton
                android:id="@+id/rb_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统WebView" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="腾讯x5" />
        </RadioGroup>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="@string/string_hit"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textSize="15sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_openUrl"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/bt_open_url" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bt_baidu"
            style="@style/textStyle"
            android:text="WebView" />

        <View
            style="@style/lineStyle"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/bt_file"
            style="@style/textStyle"
            android:text="文件夹创建、位置信息" />

        <View
            style="@style/lineStyle"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/bt_movie"
            style="@style/textStyle"
            android:text="@string/text_movie" />

        <View
            style="@style/lineStyle"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/bt_upload_photo"
            style="@style/textStyle"
            android:text="@string/text_upload_photo" />

        <View
            style="@style/lineStyle"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/bt_call"
            style="@style/textStyle"
            android:text="@string/text_js" />

        <View
            style="@style/lineStyle"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/bt_java_js"
            style="@style/textStyle"
            android:text="@string/js_android"
            android:textAllCaps="false" />

        <View
            style="@style/lineStyle"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TextView
        android:id="@+id/bt_deeplink"
        style="@style/textStyle"
        android:text="@string/deeplink" />

        <TextView
            android:id="@+id/bt_audio_record"
            style="@style/textStyle"
            android:text="录音" />

        <TextView
            android:id="@+id/bt_photo_picture"
            style="@style/textStyle"
            android:text="拍照和调起相册" />

        <View
            style="@style/lineStyle"
            android:layout_width="match_parent"
            android:layout_height="1px" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>